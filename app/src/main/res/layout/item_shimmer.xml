<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/dp10"
                android:layout_marginTop="@dimen/dp7"
                android:layout_marginEnd="@dimen/dp10"
                android:layout_marginBottom="@dimen/dp11"
                android:layout_weight="1"
                android:background="@drawable/ic_shimmer" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size16"
                android:layout_marginStart="@dimen/dp12"
                android:layout_marginTop="@dimen/dp4"
                android:layout_marginEnd="@dimen/dp12"
                android:layout_marginBottom="@dimen/dp4"
                android:background="@drawable/ic_shimmer" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size16"
                android:layout_marginStart="@dimen/dp12"
                android:layout_marginTop="@dimen/dp4"
                android:layout_marginEnd="@dimen/dp12"
                android:layout_marginBottom="@dimen/dp4"
                android:background="@drawable/ic_shimmer" />

            <View
                android:layout_width="@dimen/size104"
                android:layout_height="@dimen/size16"
                android:layout_marginStart="@dimen/dp12"
                android:layout_marginTop="@dimen/dp8"
                android:layout_marginEnd="@dimen/dp12"
                android:layout_marginBottom="@dimen/dp4"
                android:background="@drawable/ic_shimmer" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp12"
                android:layout_marginTop="@dimen/dp8"
                android:layout_marginEnd="@dimen/dp12"
                android:layout_marginBottom="@dimen/dp8">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size32"
                    android:layout_marginStart="@dimen/dp4"
                    android:layout_marginTop="@dimen/dp6"
                    android:layout_marginEnd="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_shimmer_chip" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size32"
                    android:layout_marginStart="@dimen/dp2"
                    android:layout_marginTop="@dimen/dp6"
                    android:layout_marginEnd="@dimen/dp2"
                    android:layout_weight="1"
                    android:background="@drawable/ic_shimmer_chip" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size32"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="@dimen/dp6"
                    android:layout_marginEnd="@dimen/dp4"
                    android:layout_weight="1"
                    android:background="@drawable/ic_shimmer_chip" />

            </LinearLayout>
        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
</layout>